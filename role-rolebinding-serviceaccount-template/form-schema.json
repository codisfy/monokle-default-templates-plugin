{
  "type": "object",
  "required": [
    "serviceAccountName",
    "roleName",
    "apiGroup",
    "resources",
    "verbs"
  ],
  "properties": {
    "roleName": {
      "type": "string",
      "default": "my-role"
    },
    "serviceAccountName": {
      "type": "string",
      "default": "my-service-account"
    },
    "namespace": {
      "type": "string"
    },
    "apiGroup": {
      "type": "string"
    },
    "resources": {
      "items": {
        "type": "string"
      },
      "type": "array",
      "default": ["'*'"]
    },
    "verbs": {
      "items": {
        "type": "string",
        "enum": ["create", "get", "list", "watch", "update", "patch", "delete"]
      },
      "type": "array",
      "uniqueItems": true,
      "default":["get"]
    }

  }
}
